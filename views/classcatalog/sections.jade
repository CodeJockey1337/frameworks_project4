extends ../layout2

block content
    img.rounded(src='/img/MSUD_header.jpg')
    .page-header 
        h2 MSUD Class Catalog - Sections
    p
    .container
        h2 Current Class Sections List
        table.table-condensed.table-striped
            thead
                tr
                    td Course Name
                    td Professor Name
    p
    hr
    a.btn-lg.btn-info(href='/classcatalog/index', role='button') Main Page
    a.btn-lg.btn-success(href='/classcatalog/createSection', role='button') New Section Record
    a.btn-lg.btn-warning(href='/classcatalog/editSection', role='button') Edit Section Record
    a.btn-lg.btn-danger(href='/classcatalog/deleteSection', role='button') Delete Section Record